<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="vm" type="com.whitecards.cadela.ui.adapters.ExerciseListItemViewModel"/>
    </data>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="54sp"
                  android:layout_height="wrap_content" android:layout_marginStart="2dp" android:layout_marginTop="2dp">

        <TextView
                android:text="@{vm.name}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginBottom="2dp"
                android:background="@android:color/background_dark"
                android:textColor="@android:color/primary_text_dark" android:textAlignment="center"
                android:paddingTop="2dp" android:paddingEnd="2dp" android:paddingBottom="2dp"
                android:paddingStart="2dp" android:textSize="18sp" android:textStyle="bold"/>
        <TextView
                android:text="@{vm.targetRepetition.toString()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:textColor="@android:color/primary_text_dark" android:background="@android:color/background_dark"
                android:textAlignment="center" android:paddingStart="2dp" android:paddingTop="2dp"
                android:paddingEnd="2dp" android:paddingBottom="2dp" android:textSize="18sp" android:textStyle="bold"/>
    </LinearLayout>
</layout>
